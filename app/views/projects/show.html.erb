<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <h1>
      <%= @project.name %>
    </h1>
    <%= link_to 'Update', edit_project_path(@project) %>
  </div>
</div>

<% callout_boxes = [] %>
<% callout_boxes << { title: "Available to Spend", content: (@project.budget_remaining) } %>
<% callout_boxes << { title: "Total Spent", content: (@project.budget - @project.budget_remaining) } %>
<% callout_boxes << { title: "Budget", content: @project.budget } %>
<% callout_boxes << { title: "Total Allocated", content: @project.allocated_budget } %>
<div class="row">
  <% callout_boxes.each do |callout_box| %>
    <div class="col-lg-3">
      <div class="card widget-flat">
        <div class="card-body">
          <div class="float-right">
              <i class="mdi mdi-currency-usd widget-icon"></i>
          </div>
          <h5 class="text-muted font-weight-normal mt-0" title="Budget"><%= callout_box[:title] %></h5>
          <h3 class="mt-3 mb-3"><%= callout_box[:content] %></h3>
          <p class="mb-0 text-muted">
          </p>
        </div> <!-- end card-body-->
      </div> <!-- end card-->
    </div> <!-- end col-->
  <% end %>
</div> <!-- end row -->
<hr/>
<section>
  <h2>Item Groups</h2>
  <%= render partial: 'item_groups/index', locals: { item_groups: @project.item_groups } %>
  <%= link_to 'Add Item Group', new_project_item_group_path(@project), class: 'btn btn-outline-primary' %>
</section>

<%= link_to 'Back', projects_path %>
