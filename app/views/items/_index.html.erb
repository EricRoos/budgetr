<table class='table table-sm'>
  <thead class='thead-dark'>
    <tr>
      <th>Name</th>
      <th>Unit Price</th>
      <th>Total Price</th>
      <th colspan=2></th>
    </tr>
  </thead>
  
  <tbody id='items'>
    <%= turbo_stream_from "items" %>
    <% items.each do |item| %>
      <% cache item do %>
        <%= render item %>
      <% end %>
      <%= turbo_stream_from item %>
    <% end %>
  </tbody>
</table>

<div class="modal fade" id="editItemModal" tabindex="-1" role="dialog" aria-labelledby="itemEditModalLabel" aria-hidden="true">
  <%= turbo_frame_tag :edit_item do %>
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Edit Item</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Loading...
        </div>
      </div>
    </div>
  <% end %>
</div>
