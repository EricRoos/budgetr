$("#itemEditModal<%=@item.id%>").on('hidden.bs.modal', function() {
  $('.toast .toast-body').html("Successfully edited")
  $('.toast').toast('show');
  $("div[data-item-group-id='<%= @item.item_group.id%>']").html("<%=j render @item.item_group %>");
});
var selector = "#itemEditModal<%=@item.id%>";
if($(selector+":visible").length){
  $(selector).modal('hide');
}else{
  $("div[data-item-group-id='<%= @item.item_group.id%>']").html("<%=j render @item.item_group %>");
}
